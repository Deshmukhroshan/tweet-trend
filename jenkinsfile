pipeline {
    agent {
        node {
            label 'maven'
        }
    }

    stages {
        stage("build") {
            steps {
                sh 'mvn clean deploy'
            }
        }    
       
        stage("sonarqube-scan") {
            environment {
            scannerHome = tool 'roshan-sonar-scanner'
            }
            steps {
                withSonarQubeEnv('roshan-sonarqube-server') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}
